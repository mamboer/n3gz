<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/swipelist_backview_notice"
        android:tag="back"
        style="@style/usernotice_item.back"
        >

        <Button
            android:id="@+id/userfav_btn_del"
            style="@style/usernotice_item.btn1"
            android:text="删除"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/swipelist_frontview_notice"
        android:tag="front"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            style="@style/usernotice_item.front">
            <LinearLayout
                android:id="@+id/ico_reddot"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingRight="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@+id/userfav_item_ico"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/dot_red12"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/userfav_item_title"
                    style="@style/home_news_listitem.tit"
                    android:layout_weight="0"
                    android:layout_marginBottom="@dimen/space_10"
                    android:text="畅谈三国论古今标题长度限制畅谈三国论古今标题长度限制"/>
                <LinearLayout
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="left"
                        android:id="@+id/userfav_item_cname"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游戏攻略"/>
                    <TextView
                        android:text="结束时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/userfav_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014.05.03"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
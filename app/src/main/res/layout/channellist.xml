                        android:layout_margin="@dimen/space_1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <RelativeLayout
                            android:tag="catebtn"
                            style="@style/shortcut_button">

                            <ImageButton
                                style="@style/shortcut_button_img"
                                android:id="@+id/shortcut_btn_hot"
                                android:src="@drawable/ico_cate_news" />

                            <TextView
                                style="@style/shortcut_button_txt.style1"
                                android:text="新闻" />

                            <TextView
                                style="@style/shortcut_button_badge"
                                android:layout_alignRight="@+id/shortcut_btn_hot"
                                android:text="10"/>


                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/white"
                        android:layout_margin="@dimen/space_1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

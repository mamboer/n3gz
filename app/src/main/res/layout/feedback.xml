<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/page_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/main_head">
        <RelativeLayout
            style="@style/main_head_pattern">
            <TextView
                android:id="@+id/msgcenter_head_title"
                style="@style/detail_head_title"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:text="意见反馈"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|center"
                android:clickable="true"
                android:onClick="back"
                android:src="@drawable/ico_arrow_left"
                android:scaleType="center"
                android:minWidth="40dp"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView 
    	android:id="@+id/feedback_scrollview" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:paddingTop="15.0dip"
    	android:paddingLeft="10.0dip"
    	android:paddingRight="10.0dip"
    	android:scrollbars="none" >
        <LinearLayout 
         	android:layout_width="fill_parent" 
    	 	android:layout_height="wrap_content"      
    	 	android:paddingLeft="20dip"
    	 	android:paddingRight="20dip"    
         	android:background="@color/lite_gray"
         	android:orientation="vertical">
            <TextView
             	android:layout_width="wrap_content" 
             	android:layout_height="wrap_content"
             	android:layout_marginTop="15dip" 
             	android:textSize="@dimen/text_size_13"
             	android:textColor="@color/bright_bg_btntext"
             	android:text="欢迎您提出宝贵的意见和建议" />
       	    <EditText
		        android:id="@+id/feedback_content"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
                android:background="@color/white"
		        android:textSize="@dimen/text_size_13"
                android:padding="8dp"
		        android:lines="4"
		        android:autoLink="web|email"
		        android:gravity="top"
		        android:hint="输入您的意见和建议"/>
	    	<Button
		    	android:id="@+id/feedback_publish"
		        android:layout_width="fill_parent"
		    	android:layout_height="45dip"
		    	android:layout_marginTop="15dip"
		    	android:layout_marginBottom="30dip"
		    	android:background="@drawable/selector_btn_green"
		    	android:textSize="@dimen/text_size_18"
		    	android:textColor="@color/white"
		        android:text="提交反馈"/>
        </LinearLayout>            
    </ScrollView>
</LinearLayout>
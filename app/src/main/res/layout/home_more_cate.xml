                android:text="礼包" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_line_bg1"/>

        <RelativeLayout
            android:id="@+id/frame_home_btnmore2"

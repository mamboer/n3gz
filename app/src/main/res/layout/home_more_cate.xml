                android:text="英雄" />

            <TextView
                style="@style/shortcut_button_badge"
                android:layout_alignRight="@+id/shortcut_btn_hero2"
                android:text="2"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_line_bg1"/>

        <RelativeLayout
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_gift2"
                android:src="@drawable/ico_cate_war" />


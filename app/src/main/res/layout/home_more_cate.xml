                style="@style/shortcut_button_txt"
                android:text="英雄" />

            <TextView
                style="@style/shortcut_button_badge"
                android:layout_alignRight="@+id/shortcut_btn_hero1"
                android:text="2"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_line_bg1"/>

        <RelativeLayout
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_gift1"
                android:src="@drawable/ico_cate_gift" />

            <TextView
                style="@style/shortcut_button_txt"
                android:text="礼包" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_line_bg1"/>

        <RelativeLayout
            android:id="@+id/frame_home_btnmore1"
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_more1"
                android:src="@drawable/ico_cate_community" />

            <TextView
                style="@style/shortcut_button_txt"

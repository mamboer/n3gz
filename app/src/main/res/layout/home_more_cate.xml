<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_home_cate"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <TextView
        style="@style/homecate.tit"
        android:text="猜你喜欢"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">

        <RelativeLayout
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_hot"
                android:src="@drawable/ico_cate_news" />

            <TextView
                style="@style/shortcut_button_txt"
                android:text="新闻" />

            <TextView
                style="@style/shortcut_button_badge"
                android:layout_alignRight="@+id/shortcut_btn_hot"
                android:text="10"/>


        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_line_bg1"/>

        <RelativeLayout
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_hero"
                android:src="@drawable/ico_cate_video" />

            <TextView
                style="@style/shortcut_button_txt"
                android:text="英雄" />

            <TextView
                style="@style/shortcut_button_badge"
                android:layout_alignRight="@+id/shortcut_btn_hero"
                android:text="2"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_line_bg1"/>

        <RelativeLayout
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_gift"
                android:src="@drawable/ico_cate_gift" />

            <TextView
                style="@style/shortcut_button_txt"
                android:text="礼包" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_line_bg1"/>

        <RelativeLayout
            android:id="@+id/frame_home_btnmore"
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_more"
                android:src="@drawable/ico_cate_community" />

            <TextView
                style="@style/shortcut_button_txt"
                android:text="社区热点" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        style="@style/homecate.tit"
        android:text="资讯"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">

        <RelativeLayout
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_hot1"
                android:src="@drawable/ico_cate_news" />

            <TextView
                style="@style/shortcut_button_txt"
                android:text="新闻" />

            <TextView
                style="@style/shortcut_button_badge"
                android:layout_alignRight="@+id/shortcut_btn_hot1"
                android:text="10"/>


        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/devider_line_bg1"/>

        <RelativeLayout
            style="@style/shortcut_button">

            <ImageButton
                style="@style/shortcut_button_img"
                android:id="@+id/shortcut_btn_hero1"
                android:src="@drawable/ico_cate_video" />


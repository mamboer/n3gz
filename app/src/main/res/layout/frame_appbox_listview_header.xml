<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <TableLayout
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:stretchColumns="*"
        android:layout_height="wrap_content">
        <TableRow>
            <LinearLayout
                android:background="@color/page_bg"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:tag="catebtn"
                    android:layout_margin="0.5dp"
                    android:background="@color/white"
                    style="@style/shortcut_button">

                    <ImageButton
                        style="@style/shortcut_button_img"
                        android:id="@+id/shortcut_btn_hot2"
                        android:src="@drawable/ico_cate_intro" />

                    <TextView
                        style="@style/shortcut_button_txt.style1"
                        android:text="游戏介绍" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/page_bg"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_margin="0.5dp"
                    android:background="@color/white"
                    android:tag="catebtn"
                    style="@style/shortcut_button">

                    <ImageButton
                        style="@style/shortcut_button_img"
                        android:id="@+id/shortcut_btn_hero2"
                        android:src="@drawable/ico_cate_wujiang" />

                    <TextView
                        style="@style/shortcut_button_txt.style1"
                        android:text="武将" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/page_bg"
                android:orientation="horizontal"

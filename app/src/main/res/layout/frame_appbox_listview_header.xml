                    android:tag="catebtn"
                    android:layout_margin="0.5dp"
                    android:background="@color/white"
                    style="@style/shortcut_button">

                    <ImageButton
                        style="@style/shortcut_button_img"
                        android:id="@+id/shortcut_btn_gift2"
                        android:src="@drawable/ico_cate_war" />

                    <TextView
                        style="@style/shortcut_button_txt.style1"
                        android:text="乱舞战" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/page_bg"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:tag="catebtn"
                    android:layout_margin="0.5dp"
                    android:background="@color/white"
                    android:id="@+id/frame_home_btnmore2"
                    style="@style/shortcut_button">

